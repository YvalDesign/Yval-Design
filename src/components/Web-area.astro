---
import Layout from "../layouts/main.astro";
import { Image } from "astro:assets";
import web from "../assets/Leistungen.png";
import faktum from "../assets/faktum.png";
import mivida from "../assets/mivida.png";
---

<section class="web">
  <div class="webhero">
    <h2 class="webheadline">
      WIR LÖSEN DEIN <br />
      <span class="h2-span"> Sichtbarkeitsproblem</span>
    </h2>

    <Image
      src={web}
      alt="Offener Laptop mit einer offenen Website und einer Raketengrafik im Hintergrund"
      loading="lazy"
      quality="{80}"
      decoding="async"
      placeholder="blur"
      format="avif"
      widths={[800, 1600, 3000]}
    />

    <p class="webtext">
      Mehr Kundenanfragen? Mehr Umsatz? Mehr Bewerbungen? <br />
      Die meisten Websites haben kein klares Ziel - und genau das ist das Problem.
    </p>
  </div>
  <div class="websites">
    <h3>UNSERE WEBSITES</h3>
    <div class="ex">
      <div class="wrapper">
        <Image
          src={faktum}
          alt="Offener Laptop mit einer offenen Website und einer Raketengrafik im Hintergrund"
          class="marseille"
          loading="lazy"
          quality="{80}"
          decoding="async"
          placeholder="blur"
          format="avif"
          widths={[800, 1600, 3000]}
        />
      </div>
      <div class="wrapper">
        <Image
          src={mivida}
          alt="Offener Laptop mit einer offenen Website und einer Raketengrafik im Hintergrund"
          class="marseille"
          loading="lazy"
          quality="{80}"
          decoding="async"
          placeholder="blur"
          format="avif"
          widths={[800, 1600, 3000]}
        />
      </div>
    </div>

    <button>LÖSEN WIR DAS PROBLEM!</button>
  </div>
</section>

<style>
  h2 {
    color: var(--primary);
    font-size: 9vw;
    font-weight: var(--weight-bold);
    font-family: var(--gothic-wide);

    text-align: center;
    line-height: 0.6;
  }
  .h2-span {
    color: white;
    font-family: var(--spills);
    font-weight: var(--weight-normal);
    font-size: 10vw;
  }

  .web {
    margin-block-start: 80px;
  }

  p {
    font-size: 1rem;
    line-height: 130%;
    font-family: var(--gothic-wide);
    font-weight: var(--weight-semibold);
    color: white;

    text-align: center;
    margin-inline: auto;
  }

  img {
    width: 125%;
    height: auto;
    max-width: 1300px;
  }

  @media (min-width: 701px) {
    h2 {
      font-size: 8vw;
    }

    .h2-span {
      font-size: 7.5vw;
    }

    p {
      font-size: 1.75rem;
    }
    img {
      width: 120%;
    }
  }

  @media (min-width: 1200px) {
    h2 {
      font-size: 6vw;
    }
    .h2-span {
      font-size: 6vw;
    }
    p {
      font-size: 2rem;
    }
  }

  @media (min-width: 1440px) {
    img {
      margin-top: 2.5rem;
    }
  }

  .webhero {
    position: relative;
    display: flex;
    flex-direction: column; /* Headline oben, Bild unten */
    align-items: center; /* Abstand proportional zur View Width */
    overflow-x: clip;
    overflow-y: visible;
  }

  .webheadline {
    position: absolute;
  }

  .webtext {
    position: absolute;
    inset-block-end: -4rem;
    max-width: 600%;
  }
  @media (min-width: 701px) {
    .webtext {
      inset-block-end: -5rem;
    }
  }

  @media (min-width: 1200px) {
    .webtext {
      inset-block-end: -1rem;
    }
  }
  .websites {
    max-width: 1200px;
    margin-block-start: 80px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: center; /* Bild mittig */
    justify-content: center;
    padding-inline: 1rem;
  }

  .ex {
    display: flex;
    flex-direction: column;
    gap: 4vh;
  }

  h3 {
    color: white;
    font-family: var(--gothic-xwide);
    font-weight: 600;
    font-size: 5.5vw;
    align-self: flex-start;
  }

  @media (min-width: 769px) {
    h3 {
      font-size: 2rem;
    }
  }

  .wrapper {
    overflow: hidden;
    border-radius: 30px;
  }

  .marseille {
    border-radius: 30px;
    width: 100%;
    height: auto;
    transform: scale(1);
    transition: transform 300ms ease-in-out;
    overflow: hidden;
  }

  .marseille:hover {
    transform: scale(1.1);
    transition: all 300ms ease-in-out;
  }

  button {
    background: linear-gradient(
      to right,
      var(--primary),
      var(--secondary),
      var(--primary)
    );
    border: none;
    border-radius: 50px;
    color: white;

    font-family: var(--gothic-wide);
    font-weight: 800;
    display: block;
    margin-inline: auto;

    transform: scale(1);
    transition: transform 150ms ease-in-out;
    cursor: pointer;
  }

  @media (max-width: 700px) {
    button {
      font-size: 4vw;
      padding: 20px 40px;
      margin-top: 2rem;
    }
  }

  @media (min-width: 701px) {
    button {
      font-size: 3vw;
      padding: 25px 35px;
      margin-top: 4rem;
    }
  }

  @media (min-width: 1000px) {
    button {
      font-size: 2vw;
      padding: 30px 45px;
    }
  }

  button:hover {
    transform: scale(1.05);
    transition: all 150ms ease-in-out;
  }

  button:active {
    transform: scale(0.97);
  }
</style>
